@model _2001207118_NguyenNgocThien.Models.SanPham
@{
    ViewBag.Title = "DeleteSanPham";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<form action="/admin/admin/deletesanpham" method="post">
    <div class="row">
        <div class="col-md-6">
            <label for="ID">ID</label>
            <input class="form-control" type="number" name="ID" id="ID" value="@Model.ID" />
        </div>
        <div class="col-md-6">
            <label for="TenSP">Tên Sản Phẩm</label>
            <input class="form-control" type="text" name="TenSP" id="TenSP" value="@Model.TenSP" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-danger mt-3 mb-3 mx-3">Delete</button>
        <a href="/admin/admin/quanly" class="btn btn-primary mt-3 mb-3">Quay lại</a>
    </div>
</form>

