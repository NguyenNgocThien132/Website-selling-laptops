@model _2001207118_NguyenNgocThien.Models.ChiTietSanPham
@{
    ViewBag.Title = "EditSanPham";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<form action="/admin/admin/editsanpham?ID=@Model.IDSanPham" method="post">

    @*<input class="form-control" type="hidden" name="ID" value="@Model.ID" />*@
    <input class="form-control" type="hidden" name="IDSanPham" id="IDSanPham" value="@Model.IDSanPham" />
    <div class="row">
        <div class="col-md-6">
            <label for="CPU">CPU</label>
            <input class="form-control" type="text" name="CPU" id="CPU" value="@if (Model.CPU !=null)
            {
                @Model.CPU.Trim()
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="ManHinh">Màn Hình</label>
            <input class="form-control" type="text" name="ManHinh" id="ManHinh" value="@if (Model.ManHinh!=null)
            {
                @Model.ManHinh.Trim()
            }
            " />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="RAM">RAM</label>
            <input class="form-control" type="text" name="RAM" id="RAM" value="@if (Model.RAM!=null)
            {
                @Model.RAM.Trim()
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="DoHoa">Card đồ họa</label>
            <input class="form-control" type="text" name="DoHoa" id="DoHoa" value="@if (Model.DoHoa!=null)
            {
                @Model.DoHoa.Trim()
            }
            " />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="LuuTru">Lưu Trữ</label>
            <input class="form-control" type="text" name="LuuTru" id="LuuTru" value="@if (Model.LuuTru!=null)
            {
                @Model.LuuTru.Trim()
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="HeDieuHanh">Hệ Điều Hành</label>
            <input class="form-control" type="text" name="HeDieuHanh" id="HeDieuHanh" value="@if (Model.HeDieuHanh!=null)
            {
                @Model.HeDieuHanh.Trim()
            }
            " />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Pin">Pin</label>
            <input class="form-control" type="text" name="Pin" id="Pin" value="@if (Model.Pin!=null)
            {
                @Model.Pin.Trim()
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="KhoiLuong">Khối Lượng</label>
            <input class="form-control" type="text" name="KhoiLuong" id="KhoiLuong" value="@if (Model.KhoiLuong!=null)
            {
                @Model.KhoiLuong.Trim()
            }
            " />
        </div>
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

