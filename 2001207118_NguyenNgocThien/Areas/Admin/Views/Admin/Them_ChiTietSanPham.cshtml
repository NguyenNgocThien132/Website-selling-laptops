@model _2001207118_NguyenNgocThien.Models.SanPham
@{
    ViewBag.Title = "Them_ChiTietSanPham";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<form action="/admin/admin/Them_ChiTietSanPham?id=@Model.ID" method="post">
    <input class="form-control" type="hidden" name="IDSanPham" id="IDSanPham" value="@Model.ID" />
    <div class="row">
        <div class="col-md-6">
            <label for="CPU">CPU</label>
            <input class="form-control" type="text" name="CPU" id="CPU" placeholder="CPU" />
        </div>
        <div class="col-md-6">
            <label for="ManHinh">Màn Hình</label>
            <input class="form-control" type="text" name="ManHinh" id="ManHinh" placeholder="Màn Hình" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="RAM">RAM</label>
            <input class="form-control" type="text" name="RAM" id="RAM" placeholder="Ram" />
        </div>
        <div class="col-md-6">
            <label for="DoHoa">Card đồ họa</label>
            <input class="form-control" type="text" name="DoHoa" id="DoHoa" placeholder="Card đồ họa" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="LuuTru">Lưu Trữ</label>
            <input class="form-control" type="text" name="LuuTru" id="LuuTru" placeholder="Bộ nhớ lưu trữ" />
        </div>
        <div class="col-md-6">
            <label for="HeDieuHanh">Hệ Điều Hành</label>
            <input class="form-control" type="text" name="HeDieuHanh" id="HeDieuHanh" placeholder="Hệ điều hành" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Pin">Pin</label>
            <input class="form-control" type="text" name="Pin" id="Pin" placeholder="Pin" />
        </div>
        <div class="col-md-6">
            <label for="KhoiLuong">Khối Lượng</label>
            <input class="form-control" type="text" name="KhoiLuong" id="KhoiLuong" placeholder="Trọng lượng" />
        </div>
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

