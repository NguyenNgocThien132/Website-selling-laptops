@model _2001207118_NguyenNgocThien.Models.SanPham
@{ ViewBag.Title = "Chỉnh Sửa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml"; }
<div style="width: 100%">
    <div style="width: 900px; margin: 0 auto; text-align:center;font-size: 30px;font-weight:bold; color:cyan; text-shadow: 2px 3px 5px #808080">
        <p>@Model.TenSP</p>
    </div>
</div>
<form action="/admin/admin/edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="ID" id="ID" value="@Model.ID" />
    <div class="row">
        <div class="col-md-6">
            <label for="ThuongHieuID">Thương hiệu</label>
            <select class="form-control" name="ThuongHieuID" id="ThuongHieuID">
                <option value="@Model.ThuongHieuID">@Model.ThuongHieu.NSX</option>
                @foreach (var item in ViewBag.th)
                {
                    if (item.ID != Model.ThuongHieuID)
                    {
    <option value="@item.ID">@item.NSX</option>}
                }
            </select>
        </div>
        <div class="col-md-6">
            <label for="TenSP">Tên Sản Phẩm</label>
            <input class="form-control" type="text" name="TenSP" id="TenSP" value="@Model.TenSP" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="SoLuong">so luong</label>
            <input class="form-control" type="number" name="SoLuong" id="SoLuong" value="@Model.SoLuong" />
        </div>
        <div class="col-md-6">
            <label for="GiaTien">GiaTien</label>
            <input class="form-control" type="number" name="GiaTien" id="GiaTien" value="@Model.GiaTien" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="GiaGiam">GiaGiam</label>
            <input class="form-control" type="number" name="GiaGiam" id="GiaGiam" value="@Model.GiaGiam" />
        </div>
        <div class="col-md-6">
            <label for="IDTheLoai">Thể loại</label>
            @*<input class="form-control" type="number" name="IDTheLoai" id="IDTheLoai" value="" />*@
        <select class="form-control" name="IDTheLoai" id="IDTheLoai">
            <option value="@Model.IDTheLoai">@Model.TheLoai.LoaiSP</option>
            @foreach (var item in ViewBag.tl)
            {
                if (item.ID != Model.IDTheLoai)
                {
                    <option value="@item.ID">@item.LoaiSP</option>
                }
            }
        </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="HinhAnh">Hinh</label>
            <input class="form-control" type="text" name="HinhAnh" id="HinhAnh"  value="@Model.HinhAnh.Trim()"/>
            <div class="d-flex justify-content-center mt-3">
                <img style="width: 150px; height: 150px; border-radius: 10px; border: 1px solid lightgray" src="~/img/@Model.ThuongHieu.NSX/@Model.HinhAnh.Trim()" alt="Alternate Text" />
            </div>        
        </div>
        <div class="col-md-6">
            <label for="HinhAnh">Hinh</label>
            <input class="form-control" type="file" name="HinhAnh" id="HinhAnh" />
        </div>
    </div>

    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

