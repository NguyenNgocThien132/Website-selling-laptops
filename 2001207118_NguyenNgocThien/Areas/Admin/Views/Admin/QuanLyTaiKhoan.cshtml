@model List<_2001207118_NguyenNgocThien.Identity.AppUser>
@{
    ViewBag.Title = "QuanLyTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<div>
    <h2 class="m-auto w-50 text-center mt-4 mb-4" style="text-shadow: 0px 0px 5px red; color: aqua;font-weight: bold;font-size: 45px">Quản Lý Tài Khoản</h2>
</div>
<a style="width: 200px" class="btn btn-success mb-3" href="/admin/admin/Create_TK">Tạo tài khoản mới</a>
<table class="table table-striped">
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Phone</th>
        <th>City</th>
        <th>Address</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>@item.City</td>
            <td>@item.Address</td>
            <td>
                <a class="btn btn-primary" href="/admin/admin/edituser?name=@item.UserName">Sửa</a>
                <a class="btn btn-danger" href="/admin/admin/deleteuser?name=@item.UserName">Xóa</a>
            </td>
        </tr>
    }
</table>
<div class="d-flex justify-content-center">
    <a style="width: 100px" class="btn btn-danger" href="/admin/admin/quanly">Quay lại</a>
</div>


