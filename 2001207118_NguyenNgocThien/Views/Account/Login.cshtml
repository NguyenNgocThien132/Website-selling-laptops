@model _2001207118_NguyenNgocThien.ViewModel.LoginVM

@{ ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml"; }
<div class="d-flex justify-content-center">
    <h1 style="font-weight: 700">Đăng Nhập</h1>
</div>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
<div class="row w-25 mx-auto">
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.Username, "Tài Khoản", new { @class = "mb-3 mt-2" })
        @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Username)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.Password, "Mật Khẩu", new { @class = "mb-3 mt-2" })
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>
    <div class="col-md-12">
        @Html.ValidationSummary()
    </div>
    <div class="col-md-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-dark mt-3 mb-3">Đăng Nhập</button>
    </div>
    <div>Not a member? <a class="link-primary" href="/account/register">Sign up</a></div>
</div>}

